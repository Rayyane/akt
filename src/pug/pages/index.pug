extends ../layouts/app.pug

block variables
  - var pageTitle = " Home Page"
block content
  div
    #home
    .main-wrap
      include ../components/header/header.pug
      // ##### HEADER #####
      +header(false)
      // ##### END HEADER #####
      main.container-wrap
        // ##### BANNER #####
        section#banner
          include ../components/video-banner.pug
        // ##### END BANNER #####
        // ##### PROMOTION #####
        section#promotions
          include ../components/promotions.pug
        // ##### END PROMOTION #####
        // ##### NEW-PRODUCTS #####
        section#all-new.space-top
          include ../components/new-products.pug
        // ##### END NEW-PRODUCTS #####
        // ##### TRENDING #####
        section#trending.space-top
          include ../components/trending.pug
        // ##### END TRENDING #####
        // ##### CATEGORIES #####
        section#categories.space-top
          include ../components/categories.pug
        // ##### END CATEGORIES #####
        // ##### FEATURED #####
        section#featured.space-top-short
          include ../components/featured-products.pug
        // ##### END FEATURED #####
        // ##### TESTIMONIAL #####
        section#testimonials.space-top
          include ../components/testimonials.pug
        // ##### END TESTIMONIAL #####
        // ##### BLOG #####
        section#blog
          include ../components/blog.pug
        // ##### END BLOG #####
        // ##### FEATURE #####
        section#feature.space-top-short
          include ../components/feature.pug
        // ##### END FEATURE #####
      // ##### FOOTER #####
      section#footer.space-top
        include ../components/footer.pug
      // ##### END FOOTER #####
      // ##### PAGE-NAV #####
      .hidden-sm-down
        include ../components/page-nav.pug
      // ##### END PAGE-NAV #####
      // ##### NOTIFICATION #####
      .hidden-sm-down
        include ../components/notification.pug
      // ##### END NOTIFICATION #####